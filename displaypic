function doGet(e) {
  var imageUrl = e.parameter.img || 'https://drive.google.com/file/d/1BiqPn0vxuJrkhg4PA56H9I_rjrfClUPR/view?usp=sharing';
  var title = e.parameter.title || 'Default Image Title';
  var description = e.parameter.desc || 'This is a preview image for LinkedIn.';
  var url = 'https://script.google.com/macros/s/your_script_id/exec?img=' + encodeURIComponent(imageUrl);

  var htmlOutput = HtmlService.createHtmlOutput(
    '<!DOCTYPE html>' +
    '<html><head>' +
    '<meta property="og:title" content="' + title + '"/>' +
    '<meta property="og:description" content="' + description + '"/>' +
    '<meta property="og:image" content="' + imageUrl + '"/>' +
    '<meta property="og:url" content="' + url + '"/>' +
    '<meta property="og:type" content="website"/>' +
    '</head><body>' +
    '<img src="' + imageUrl + '"/>' + // Optional: display image in page
    '</body></html>'
  );
  htmlOutput.setXFrameOptionsMode(HtmlService.XFrameOptionsMode.ALLOWALL);
  return htmlOutput;
}
